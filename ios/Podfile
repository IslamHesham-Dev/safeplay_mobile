# Uncomment this line to define a global platform for your project
platform :ios, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # Performance optimizations
    target.build_configurations.each do |config|
      # Disable bitcode for faster builds
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      
      # Completely remove the -G flag and related debug symbol generation
      config.build_settings['GCC_GENERATE_DEBUGGING_SYMBOLS'] = 'NO'
      config.build_settings['DEBUG_INFORMATION_FORMAT'] = 'dwarf'
      
      # Aggressively remove problematic compiler flags
      if config.build_settings['OTHER_CFLAGS']
        config.build_settings['OTHER_CFLAGS'] = config.build_settings['OTHER_CFLAGS'].reject { |flag| flag.include?('-G') }
      end
      if config.build_settings['OTHER_CPLUSPLUSFLAGS']
        config.build_settings['OTHER_CPLUSPLUSFLAGS'] = config.build_settings['OTHER_CPLUSPLUSFLAGS'].reject { |flag| flag.include?('-G') }
      end
      
      # Remove any existing -G flags from all possible sources
      config.build_settings['GCC_OTHER_FLAGS'] = (config.build_settings['GCC_OTHER_FLAGS'] || []).reject { |flag| flag.include?('-G') }
      config.build_settings['OTHER_SWIFT_FLAGS'] = (config.build_settings['OTHER_SWIFT_FLAGS'] || []).reject { |flag| flag.include?('-G') }
      
      # Fix compiler optimization flags for arm64
      if config.name == 'Debug'
        config.build_settings['GCC_OPTIMIZATION_LEVEL'] = '0'
        config.build_settings['SWIFT_OPTIMIZATION_LEVEL'] = '-Onone'
        config.build_settings['ENABLE_TESTABILITY'] = 'YES'
      else
        config.build_settings['GCC_OPTIMIZATION_LEVEL'] = 's'
        config.build_settings['SWIFT_OPTIMIZATION_LEVEL'] = '-O'
        config.build_settings['ENABLE_TESTABILITY'] = 'NO'
      end
      
      # Reduce build time
      config.build_settings['COMPILER_INDEX_STORE_ENABLE'] = 'NO'
      
      # Force iOS deployment target to 14.0 regardless of Flutter's override
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      
      # Fix for arm64 compilation issues
      config.build_settings['ARCHS'] = 'arm64'
      config.build_settings['VALID_ARCHS'] = 'arm64'
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES' if config.name == 'Debug'
      
      # Additional fixes for problematic pods
      config.build_settings['CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER'] = 'NO'
      config.build_settings['CLANG_WARN_DOCUMENTATION_COMMENTS'] = 'NO'
      config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'YES'
      
      # Disable problematic debug features that might trigger -G flag
      config.build_settings['ENABLE_NS_ASSERTIONS'] = 'NO'
      config.build_settings['GCC_DYNAMIC_NO_PIC'] = 'NO'
      
      # Fix for Firebase/Google dependencies
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      config.build_settings['DEFINES_MODULE'] = 'YES'
    end
  end
end
