# ===========================================
# SafePlay Mobile - Environment Variables
# For GitHub Workflows (IPA Build)
# ===========================================

# ===========================================
# FLUTTER CONFIGURATION
# ===========================================

# Flutter version (optional - defaults to stable)
FLUTTER_VERSION=3.16.0

# Build mode (release, debug, profile)
BUILD_MODE=release

# Target platform (ios, android, web, all)
TARGET_PLATFORM=ios

# ===========================================
# iOS BUILD CONFIGURATION
# ===========================================

# iOS Bundle Identifier
IOS_BUNDLE_ID=com.safeplay.mobile

# iOS App Name
IOS_APP_NAME=SafePlay

# iOS Version (auto-incremented in workflow)
IOS_VERSION=1.0.0

# iOS Build Number (auto-incremented in workflow)
IOS_BUILD_NUMBER=1

# iOS Deployment Target
IOS_DEPLOYMENT_TARGET=12.0

# ===========================================
# APPLE DEVELOPER ACCOUNT
# ===========================================

# Apple Developer Team ID (10-character string)
APPLE_TEAM_ID=XXXXXXXXXX

# Apple Developer Username (email)
APPLE_USERNAME=your-email@example.com

# Apple Developer Password (app-specific password)
APPLE_PASSWORD=your-app-specific-password

# ===========================================
# CODE SIGNING
# ===========================================

# Code Signing Identity
CODE_SIGN_IDENTITY=iPhone Distribution

# Provisioning Profile Name
PROVISIONING_PROFILE_NAME=SafePlay Distribution

# Provisioning Profile UUID
PROVISIONING_PROFILE_UUID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================

# Firebase Project ID
FIREBASE_PROJECT_ID=safeplay-mobile

# Firebase App ID (iOS)
FIREBASE_IOS_APP_ID=1:123456789:ios:abcdef123456

# Firebase API Key
FIREBASE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Firebase Auth Domain
FIREBASE_AUTH_DOMAIN=safeplay-mobile.firebaseapp.com

# Firebase Database URL
FIREBASE_DATABASE_URL=https://safeplay-mobile.firebaseio.com

# Firebase Storage Bucket
FIREBASE_STORAGE_BUCKET=safeplay-mobile.appspot.com

# Firebase Messaging Sender ID
FIREBASE_MESSAGING_SENDER_ID=123456789

# Firebase Measurement ID
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ===========================================
# BUILD ARTIFACTS
# ===========================================

# Output directory for build artifacts
BUILD_OUTPUT_DIR=build/ios/ipa

# IPA filename (without extension)
IPA_FILENAME=SafePlay

# ===========================================
# TESTFLIGHT / APP STORE CONNECT
# ===========================================

# App Store Connect API Key ID
APPSTORE_API_KEY_ID=XXXXXXXXXX

# App Store Connect API Issuer ID
APPSTORE_API_ISSUER_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# App Store Connect API Private Key (base64 encoded)
APPSTORE_API_PRIVATE_KEY=LS0tLS1CRUdJTiBQUklWQVRFIEtFWS0tLS0t...

# ===========================================
# NOTIFICATIONS
# ===========================================

# Slack Webhook URL (for build notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Discord Webhook URL (for build notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Email notifications (comma-separated)
NOTIFICATION_EMAILS=developer@example.com,team@example.com

# ===========================================
# SECURITY NOTES
# ===========================================

# AI Safety Monitoring (DeepSeek via OpenRouter)
OPENROUTER_API_KEY=sk-or-*******************************
OPENROUTER_APP_URL=https://safeplay.app
OPENROUTER_APP_NAME=SafePlay Mobile

# IMPORTANT: Never commit actual secrets to version control!
# 1. Copy this file to .env
# 2. Fill in your actual values
# 3. Add .env to .gitignore (already done)
# 4. Use GitHub Secrets for sensitive values in workflows

# For GitHub Actions, use repository secrets instead of .env file:
# - Go to your GitHub repository
# - Navigate to Settings > Secrets and variables > Actions
# - Add each secret with the same name as the environment variable
# - Reference them in your workflow as ${{ secrets.SECRET_NAME }}



